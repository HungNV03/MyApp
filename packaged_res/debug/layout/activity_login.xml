<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bgrlgg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng Nhập"
        android:gravity="center"
        android:fontFamily="@font/nabila"
        android:textSize="35dp"
        android:textColor="#FFEB3B"
        android:layout_margin="15dp"
        android:textStyle="bold"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="@color/white"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="none"

        app:hintEnabled="false"
        android:layout_marginBottom="20dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:background="@drawable/custom_login"
            android:drawableStart="@drawable/ic_baseline_perm_identity_24"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"

            android:text="nguyenvanhung"
            android:layout_marginBottom="5dp"
            android:padding="20dp"
            android:id="@+id/edUsername"
            android:hint="TÊN ĐĂNG NHẬP"
            />


    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:boxBackgroundMode="none"
        app:hintEnabled="false"
        android:layout_marginBottom="20dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MẬT KHẨU"
            android:background="@drawable/custom_login"
            android:text="123456"
            android:drawablePadding="10dp"
            android:layout_marginBottom="5dp"
            android:padding="20dp"
            android:drawableStart="@drawable/ic_baseline_lock_open_24"
            android:maxLines="1"
            android:inputType="textPassword"
            android:id="@+id/edPassword"/>


    </com.google.android.material.textfield.TextInputLayout>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:text="LƯU MẬT KHẨU"
        android:textColor="#FF9800"
        android:textStyle="bold|italic"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/chkRememberPass"/>
    <Button

        android:layout_width="match_parent"
        android:backgroundTint="#03B8A7"
        android:layout_height="wrap_content"
        android:text="đăng nhập"
        android:textStyle="bold"
        android:textColor="#1A535A"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:id="@+id/btnLogin"/>




</LinearLayout>