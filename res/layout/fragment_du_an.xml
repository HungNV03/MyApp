<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".fragment.DuAnFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THEM DU AN MOI"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#f1f"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="du an moi"
        android:id="@+id/edthemda"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btnThem"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="3"
            android:backgroundTint="#9C27B0"
            android:text="Them" />

        <Button
            android:id="@+id/btnSua"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_weight="3"
            android:backgroundTint="#9C27B0"
            android:text="Sua" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#B7E4AD5B" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUAN LY DU AN"
        android:gravity="center"
        android:textSize="20dp"

        android:textStyle="bold"
        android:layout_margin="15dp"
        android:textColor="#f1f"/>

   <androidx.recyclerview.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/rcvDuan"/>

</LinearLayout>